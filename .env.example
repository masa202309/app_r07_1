# ======================
# AI Provider Settings
# ======================

# AI Provider: openai, anthropic (claude), google (gemini)
AI_PROVIDER=openai

# OpenAI Settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic (Claude) Settings
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google (Gemini) Settings
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-2.0-flash-exp

# Default AI Model (fallback if provider-specific model not set)
DEFAULT_AI_MODEL=gpt-4o-mini

# AI Request Settings
AI_TEMPERATURE=0.2
AI_MAX_TOKENS=2000

# ======================
# Exam Service Settings
# ======================

# Exam AI Settings (can use different provider/model for exam generation)
EXAM_AI_PROVIDER=openai
EXAM_AI_MODEL=gpt-4o-mini
EXAM_AI_TEMPERATURE=0.2
EXAM_AI_MAX_TOKENS=2000

# ======================
# LINE Bot Settings
# ======================

# LINE Credentials (optional, for LINE webhook)
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret

# LINE AI Settings (can use different provider/model for LINE chat)
LINE_AI_PROVIDER=openai
LINE_AI_MODEL=gpt-4o-mini
LINE_AI_TEMPERATURE=0.5
LINE_AI_MAX_TOKENS=600

# ======================
# Server Settings
# ======================

PORT=3000
NODE_ENV=development
